extends ../layout

append Css
	link(type='text/css', rel='stylesheet', href=less.players)

block Content
	h2 #{players.length} Players
	table.table
		thead
			tr
				th
				th
				th(colspan=2) Singles
				th(colspan=2) Doubles 
			tr
				th
				th Name
				th Played
				th Won
				th Played
				th Won
		tbody
		each p in players
			tr
				td.player-image-cell
					if p.imageUrl
						img(src=p.imageUrl)
				td #{p.name}
				td #{p.stats.singlesGamesPlayed}
				td #{p.stats.singlesGamesWon}
				td #{p.stats.doublesGamesPlayed}
				td #{p.stats.doublesGamesWon}
