extends ../layout
block append Css 
		link(type='text/css', rel='stylesheet', href=less.recentgames)

block Content
		h2 Recent Games
		table.table.table-striped
			tr
				th Winner
				th Loser 
				th Score
				th Date played
			each game, i in recentGames
				tr
					td #{game.winner}
					td #{game.loser}
					td #{game.winnerScore}-#{game.loserScore} 
					td #{game.time}