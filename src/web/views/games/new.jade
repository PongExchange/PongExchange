extends ../layout
block append Css 
    link(type='text/css', rel='stylesheet', href=css.chosen)
block append Js 
    script(src=js.chosen_jquery)
    script(src=js.games)

block Content
    h3 Record a new game.

    form(method='post' action='create')
        select(name="team1[players][]", data-placeholder="Add player(s) on team 1",multiple class="chosen-select", style="width:300px;", tabindex="1")
            for person in players
                option(value="#{person.id}") #{person.name}

        input(type='text', name='team1[score]', placeholder='team 1 score')
        
        br

        select(name="team2[players][]", data-placeholder="Add player(s) on team 2",multiple class="chosen-select", style="width:300px;", tabindex="1")
            for person in players
                option(value="#{person.id}") #{person.name}
        
        input(type='text', name='team2[score]', placeholder='team 2 score')
        
        br
        
        input(type='submit', class='btn')